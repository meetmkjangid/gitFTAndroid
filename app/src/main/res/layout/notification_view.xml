<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_gray_bg"
                android:padding="10dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imgvwLogoNoti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"/>

    <in.futuretrucks.customviews.CustomTextView
        android:id="@+id/txtNotiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgvwLogoNoti"
        android:text="Notification Title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_20"
        app:edittextfont="@string/font_style"/>

    <in.futuretrucks.customviews.CustomTextView
        android:id="@+id/txtNotiDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgvwLogoNoti"
        android:layout_below="@+id/txtNotiTitle"
        android:text="Notification Title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_16"
        app:edittextfont="@string/font_style"/>

</RelativeLayout>