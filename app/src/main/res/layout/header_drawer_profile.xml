<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/imgvwProfileDrawer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_pic"/>

    <in.futuretrucks.customviews.CustomTextView
        android:id="@+id/txtUsernameDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgvwProfileDrawer"
        android:layout_centerHorizontal="true"
        app:edittextfont="@string/font_style"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_20"/>

    <in.futuretrucks.customviews.CustomTextView
        android:id="@+id/txtUserMobileDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsernameDrawer"
        android:layout_centerHorizontal="true"
        app:edittextfont="@string/font_style"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_18"/>

</RelativeLayout>