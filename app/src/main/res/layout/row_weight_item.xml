<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="8dp"
        android:orientation="vertical">

        <in.futuretrucks.customviews.CustomTextView
            android:id="@+id/txtWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Truck"
            android:layout_toLeftOf="@+id/txtTruckCategoryCounter"
            android:textColor="@color/color_gray_devider"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layoutItem"
        android:background="@color/color_gray_bg"/>

</RelativeLayout>