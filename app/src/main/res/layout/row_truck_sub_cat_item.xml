<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkSelectVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_checkbox" />


        <in.futuretrucks.customviews.CustomTextView
            android:id="@+id/txtTruckSubCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Truck"
            android:layout_toRightOf="@+id/chkSelectVehicle"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_gray_devider"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>

        <in.futuretrucks.customviews.CustomTextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_header"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/layoutItem"
        android:background="@android:color/transparent"/>

</RelativeLayout>