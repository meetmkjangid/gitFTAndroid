<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.futuretrucks.DriverRegisterActivity"
    tools:showIn="@layout/activity_driver_register">


    <include
        android:id="@+id/layoutHeader"
        layout="@layout/toolbar_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutHeader"
        android:scrollbarSize="1dp"
        android:scrollbarThumbVertical="@color/color_header"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="300dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDriverFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/owner"
                    android:drawablePadding="25dp"
                    android:hint="@string/DRIVER_FIRST_NAME"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_LastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDriverLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/owner"
                    android:drawablePadding="25dp"
                    android:hint="@string/DRIVER_LAST_NAME"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_License"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pancard"
                    android:drawablePadding="25dp"
                    android:hint="@string/LICENSE_NO"
                    android:inputType="text"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDriverMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mobile"
                    android:drawablePadding="25dp"
                    android:hint="@string/MOBILE_NO"
                    android:inputType="number"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/ADDRESS_1"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/ADDRESS_2"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/AREA"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/CITY"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_District"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/DISTRICT"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="@string/PINCODE"
                    android:inputType="number"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtFathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="25dp"
                    android:hint="Father Name"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_SelectVehicleWeight">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:focusable="false"
                    android:hint="Date Of Birth"
                    android:inputType="none"
                    android:drawableLeft="@drawable/pancard"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_DLIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_SelectVehicleWeight">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDLIssueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:drawableLeft="@drawable/pancard"
                    android:focusable="false"
                    android:hint="DL Issue Date"
                    android:inputType="none"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_DLExpireDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_SelectVehicleWeight">

                <in.futuretrucks.customviews.CustomEditText
                    android:id="@+id/edtDLExpireDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:drawableLeft="@drawable/pancard"
                    android:focusable="false"
                    android:hint="DL Expire Date"
                    android:inputType="none"
                    android:singleLine="true"
                    app:edittextfont="@string/font_style"/>
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkAcceptTermsCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"/>

                <in.futuretrucks.customviews.CustomTextView
                    android:id="@+id/termsandconditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#222222"
                    android:textSize="@dimen/font_size_16"
                    android:text="@string/accept_condition"/>

            </LinearLayout>

            <in.futuretrucks.customviews.CustomButton
                android:id="@+id/btnRegisterNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="@string/REGISTER"
                android:textColor="@color/color_header"
                android:textSize="@dimen/font_size_18"
                app:edittextfont="@string/font_style" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
