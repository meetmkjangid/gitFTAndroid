<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <in.futuretrucks.customviews.CustomTextView
            android:id="@+id/txtTruckCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Truck"
            android:layout_toLeftOf="@+id/txtTruckCategoryCounter"
            android:textColor="@color/color_gray_devider"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>


        <in.futuretrucks.customviews.CustomTextView
            android:id="@+id/txtTruckCategoryCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txtBox"
            android:textColor="@color/color_gray_devider"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>

        <in.futuretrucks.customviews.CustomTextView
            android:id="@+id/txtBox"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_header"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/font_size_20"
            app:edittextfont="@string/font_style"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/layoutItem"
        android:background="@android:color/transparent"/>

</RelativeLayout>